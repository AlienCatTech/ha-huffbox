{
	"name": "huffui",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"build:dev": "vite build && mkdir -p ../config/custom_components/huffbox/huffui && rm -rf ../config/custom_components/huffbox/huffui && cp -r build ../config/custom_components/huffbox/huffui",
		"build:ha": "vite build && rm -rf ../custom_components/huffbox/huffui && cp -r build ../custom_components/huffbox/huffui",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@skeletonlabs/skeleton": "2.10.1",
		"@skeletonlabs/tw-plugin": "0.4.0",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@tailwindcss/forms": "0.5.7",
		"@tailwindcss/typography": "0.5.13",
		"@types/eslint": "^8.56.7",
		"@types/node": "20.14.10",
		"@types/qrcode": "^1.5.5",
		"autoprefixer": "10.4.19",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"postcss": "8.4.39",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tailwindcss": "3.4.4",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0-alpha.20",
		"vite": "^5.0.3",
		"vite-plugin-tailwind-purgecss": "0.3.3",
		"vitest": "^1.2.0"
	},
	"type": "module",
	"dependencies": {
		"@flexilte/core": "^1.1.3",
		"@flexilte/skeleton": "^1.1.3",
		"@floating-ui/dom": "1.6.7",
		"@iconify/icons-ic": "^1.2.13",
		"@iconify/icons-mdi": "^1.2.48",
		"@iconify/svelte": "^4.0.2",
		"@sveltejs/adapter-static": "^3.0.2",
		"qrcode": "^1.5.3",
		"uplot": "^1.6.30",
		"yaml": "^2.5.0"
	}
}
